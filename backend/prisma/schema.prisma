generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  expenses  Expense[]
  createdAt DateTime  @default(now())
}

model Expense {
  id        String   @id @default(cuid())
  title     String
  amount    Float
  category  String
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  note      String? 
  userId    String
  createdAt DateTime @default(now())
}
